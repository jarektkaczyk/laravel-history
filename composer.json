{
    "name": "sofa/history",
    "description": "",
    "keywords": [
        "sofa",
        "history"
    ],
    "homepage": "https://github.com/sofa/history",
    "license": "MIT",
    "authors": [
        {
            "name": "Jarek Tkaczyk",
            "email": "jarek@softonsofa.com",
            "homepage": "https://softonsofa.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "illuminate/contracts": ">=7.0",
        "illuminate/database": ">=7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.3",
        "friendsofphp/php-cs-fixer": "^2.0",
        "fakerphp/faker": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Sofa\\History\\": "src",
            "Sofa\\History\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sofa\\History\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sofa\\History\\HistoryServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/jarektkaczyk"
        }
    ]
}
